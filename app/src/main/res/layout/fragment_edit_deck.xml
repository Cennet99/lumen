<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Define ViewModel or other data bindings here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.edit.EditDeckFragment">

        <!-- Back button to navigate to the previous screen -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />

        <!-- Title TextView to display the deck name -->
        <TextView
            android:id="@+id/deckTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viewing Deck"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonBack"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <!-- RecyclerView to display the list of flashcards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFlashcards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/deckTitle"
            app:layout_constraintBottom_toTopOf="@id/buttonAddFlashcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <!-- Button to add a new flashcard to the deck -->
        <Button
            android:id="@+id/buttonAddFlashcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Flashcard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
