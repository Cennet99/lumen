<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Define ViewModel or other data bindings here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.learn.LearnFragment">

        <!-- Display the name of the deck being learned -->
        <TextView
            android:id="@+id/textViewDeckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Deck"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Display the current question -->
        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/textViewDeckName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Display the answer (initially hidden) -->
        <TextView
            android:id="@+id/textViewAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textViewQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Button to show the answer -->
        <Button
            android:id="@+id/buttonShowAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Answer"
            app:layout_constraintTop_toBottomOf="@id/textViewAnswer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Button to mark the question as memorized (initially hidden) -->
        <Button
            android:id="@+id/buttonKnown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memorized"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonShowAnswer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Button to mark the question as not memorized (initially hidden) -->
        <Button
            android:id="@+id/buttonUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Memorized"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonKnown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
